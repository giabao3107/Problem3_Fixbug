# Real-time Alert System Configuration
# Copy this file to .env and fill in your actual settings

# FiinQuant Configuration (BẮT BUỘC)
FIINQUANT_USERNAME=your_fiinquant_username
FIINQUANT_PASSWORD=your_fiinquant_password

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Email Notification Configuration
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_RECIPIENTS=recipient1@gmail.com,recipient2@gmail.com
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_ENABLED=true
EMAIL_USE_TLS=true

# System Configuration
REFRESH_INTERVAL_SECONDS=60
TIMEFRAME=15m
LOG_LEVEL=INFO
TIMEZONE=Asia/Ho_Chi_Minh

# Risk Management
MAX_CONCURRENT_POSITIONS=10
MAX_DAILY_LOSS_PERCENT=5.0
POSITION_SIZE_PERCENT=2.0

# Database Configuration
DATABASE_PATH=./database/trading_data.db
DATABASE_URL=sqlite:///data/trading_alerts.db

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# Optional: Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security
SECRET_KEY=your-secret-key-here

# Instructions:
# 1. Copy this file to .env
# 2. Fill in your actual credentials:
#    - FiinQuant username and password
#    - Telegram bot token and chat ID
#    - Email settings (use App Password for Gmail)
# 3. For Gmail: Enable 2FA and generate App Password at: https://myaccount.google.com/apppasswords
# 4. Adjust system settings as needed (timeframe, risk management, etc.)
# 5. Database will be created automatically if it doesn't exist